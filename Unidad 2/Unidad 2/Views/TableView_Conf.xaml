<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Unidad_2.Views.TableView_Conf">


    <TableView  Intent="Settings" BackgroundColor="AliceBlue">
        <TableRoot>
            <TableSection Title="Sonido" TextColor="LightSlateGray" >
                <SwitchCell Text="Llamadas" On="false" OnColor="Green" />
                <SwitchCell Text="Mensajes" On="True" OnColor="Green"/>
            </TableSection>
            <TableSection Title="Sec 2"  >
                <TextCell Text="Config "  />
                <EntryCell Placeholder="Escriba su config" />              
            </TableSection>
            <TableSection  Title="Customer" >
                <ViewCell>
                    <StackLayout Orientation="Horizontal" Padding="15" Spacing="20">
                     
                        <Label Text="Config" TextColor="LightGray"></Label>
                        <Switch IsToggled="false" OnColor="GreenYellow" HorizontalOptions="EndAndExpand" ThumbColor="White"/>
                    </StackLayout>
                </ViewCell>

            </TableSection>
        </TableRoot>
    </TableView>
  
</ContentPage>