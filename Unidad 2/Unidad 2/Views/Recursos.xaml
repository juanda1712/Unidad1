<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Font_ico="clr-namespace:Unidad_2.Fonts"
             Title="Recursos"
             x:Class="Unidad_2.Views.Recursos">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="&#xE809;" TextColor="DarkSlateBlue" FontFamily="fontello"  FontSize="Medium" />

            <Label Text="Welcome to Xamarin.Forms!"                    
                   FontFamily="Coneria"
                   FontSize="Medium"/>

            <Label Text="{x:Static Font_ico:Fonts.Download}" TextColor="LightCoral" 
                   FontFamily="fontello"  FontSize="Medium" />
            
            <Label Text="Hola" FontSize="Medium" />

            <Button Style="{StaticResource BtnAceptar}  " ></Button>
            <Button Style="{StaticResource BtnCancelar} " Clicked="Button_Clicked" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>