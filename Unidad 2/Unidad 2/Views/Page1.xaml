<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Unidad_2.Views.Page1"
             BackgroundColor="DarkSlateBlue">
    <StackLayout Orientation="Vertical">

        <StackLayout Spacing="0" VerticalOptions="CenterAndExpand" >

            <Label   HorizontalOptions="CenterAndExpand" 
                  FontAttributes="Italic" 
                  TextColor="White" 
                  Text="Bienvenido a la clase de programación Movil " FontSize="Medium" 
                  VerticalOptions="CenterAndExpand" >
            </Label>


        </StackLayout>

        <StackLayout>
            <StackLayout VerticalOptions="EndAndExpand" Margin="0,0,0,50">
                <Button Text="Login" VerticalOptions="CenterAndExpand" CornerRadius="30" BackgroundColor="white" WidthRequest="150" HorizontalOptions="Center" >
                </Button>
                <Label   HorizontalOptions="CenterAndExpand"  FontAttributes="Italic" TextColor="White" Text="Register " FontSize="Medium"  VerticalOptions="CenterAndExpand" >
                </Label>
            </StackLayout>
        </StackLayout>
    </StackLayout>

</ContentPage>